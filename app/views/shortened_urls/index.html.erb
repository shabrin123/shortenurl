<%- model_class = ShortenedUrl -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:owner_id) %></th>
      <th><%= model_class.human_attribute_name(:owner_type) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:unique_key) %></th>
      <th><%= model_class.human_attribute_name(:expires_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shortened_urls.each do |shortened_url| %>
      <tr>
        <td><%= link_to shortened_url.id, shortened_url_path(shortened_url) %></td>
        <td><%= shortened_url.owner_id %></td>
        <td><%= shortened_url.owner_type %></td>
        <td><%= shortened_url.url %></td>
        <td><%= shortened_url.unique_key %></td>
        <td><%= shortened_url.expires_at %></td>
        <td><%=l shortened_url.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shortened_url_path(shortened_url), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shortened_url_path(shortened_url),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shortened_url_path,
            :class => 'btn btn-primary' %>
